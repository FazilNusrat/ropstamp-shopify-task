{% schema %}
{
  "name": "Date Picker",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title"
    }
  ],
  "presets": [
    {
      "name": "Date Picker",
      "category": "Custom",
      "settings": {
        "section_title": "Custom section"
      }
    }
  ]
}
{% endschema %}

<div class="section">
  <h2>{{ section.settings.section_title }}</h2>
  <div id="expiry_date_field"></div>
</div>

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script>
  
  Shopify.designMode.renderSettingsForm = function(formId, formData, render) {
    // Render the existing settings form
    render(formId, formData);

    // Add a date picker field
    var expiryDateField = document.createElement("input");
    expiryDateField.setAttribute("type", "text");
    expiryDateField.setAttribute("id", "expiry_date");
    expiryDateField.value = "2023-02-13";
    var formContainer = document.querySelector(`#${formId}`);
    var formGroup = document.createElement("div");
    formGroup.classList.add("form-group");
    formGroup.innerHTML = `<label for="expiry_date">Expiry date</label>`;
    formGroup.appendChild(expiryDateField);
    formContainer.appendChild(formGroup);

    // Initialize the date picker
    $("#expiry_date").datepicker();
  };

</script>
